<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/song_info_background">

    <android.support.v7.widget.CardView
        android:id="@+id/info_album_cover_card"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        app:cardElevation="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <ImageView
            android:id="@+id/info_album_art"
            android:background="@drawable/temp_album_art"
            android:scaleType="fitCenter"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:contentDescription="@null"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/info_songName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SONG_TITLE"
        android:textSize="24dp"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:ellipsize="marquee"
        android:layout_below="@id/info_album_cover_card"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/info_artistName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ARTIST_NAME"
        android:textSize="18dp"
        android:maxLines="1"
        android:textColor="@android:color/white"
        android:layout_below="@id/info_songName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="#546E7A"
        android:layout_below="@id/info_artistName"
        android:layout_alignLeft="@id/info_album_cover_card"
        >

    <LinearLayout
        android:id="@+id/info_infoLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="2dp">

        <LinearLayout
            android:id="@+id/info_albumLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/info_artistName"
            android:layout_alignLeft="@id/info_album_cover_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ALBUM_TAG"
                android:textSize="13dp"
                android:maxLines="1"
                android:paddingRight="5dp"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/info_album"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Night Visions"
                android:textSize="13dp"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/info_yearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/info_albumLayout"
            android:layout_alignLeft="@id/info_album_cover_card">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/YEAR_TAG"
                android:paddingRight="5dp"
                android:textSize="13dp"
                android:maxLines="1"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/info_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2012"
                android:textSize="13dp"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:layout_below="@id/info_album"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_trackLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/info_yearLayout"
            android:layout_alignLeft="@id/info_album_cover_card"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/TRACK_TAG"
                android:paddingRight="5dp"
                android:textSize="13dp"
                android:maxLines="1"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/info_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="13dp"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:layout_below="@id/info_year"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_genreLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_trackLayout"
            android:layout_alignLeft="@id/info_album_cover_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/GENRE_TAG"
                android:paddingRight="5dp"
                android:textSize="13dp"
                android:maxLines="1"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/info_genre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rock"
                android:textSize="13dp"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:layout_below="@id/info_album"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_durationLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/info_genreLayout"
            android:layout_alignLeft="@id/info_album_cover_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/DURATION_TAG"
                android:paddingRight="5dp"
                android:textSize="13dp"
                android:maxLines="1"
                android:textColor="@android:color/white"
                />

            <TextView
                android:id="@+id/info_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2:39"
                android:textSize="13dp"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/info_playsLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/info_durationLayout"
            android:layout_alignLeft="@id/info_album_cover_card">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/PLAYS_TAG"
                android:paddingRight="5dp"
                android:textSize="13dp"
                android:maxLines="1"
                android:textColor="@android:color/white"/>
            <TextView
                android:id="@+id/info_plays"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="13dp"
                android:maxLines="1"
                android:textColor="@android:color/white"
                android:layout_below="@id/info_album"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                />
        </LinearLayout>

    </LinearLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:id="@+id/info_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_close_black_24dp"
        android:tint="@color/cardview_light_background"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp"
        android:clickable="true"/>


</RelativeLayout>