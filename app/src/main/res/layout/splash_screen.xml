<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weave">

    <ProgressBar
        android:id="@+id/splash_screen_progress_bar"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        style="@android:style/Widget.DeviceDefault.ProgressBar.Horizontal"
        android:layout_marginEnd="5dp" />

    <TextView
        android:id="@+id/splash_screen_progress_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/splash_screen_progress_bar"
        android:text="@string/getting_songs_progress_label"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adding_songs_progress_bar_title"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="18sp"
        android:layout_above="@id/splash_screen_progress_bar"
        />

</RelativeLayout>